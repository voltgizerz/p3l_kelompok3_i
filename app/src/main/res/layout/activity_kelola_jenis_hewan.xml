<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".KelolaJenisHewan">

    <ImageView
        android:id="@+id/imageViewKelolaJH"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nama_jenis_hewan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Jenis Hewan" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_create_jenis_hewan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH JENIS HEWAN" />

    <Button
        android:id="@+id/btnTampilJenisHewanKelola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffdd0"
        android:text="TAMPIL JENIS HEWAN" />

    <Button
        android:id="@+id/btnUpdateJH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update JENIS HEWAN"
        android:background="#00FF00"
        android:layout_marginBottom="10dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnDeleteJH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HAPUS JENIS HEWAN"
        android:background="#FF6347"
        android:visibility="gone" />

</LinearLayout>