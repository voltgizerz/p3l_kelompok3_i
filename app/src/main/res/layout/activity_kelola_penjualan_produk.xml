<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#FFEB3B"
    tools:context=".KelolaPenjualanProduk"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewKelolaPenjualan"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_marginBottom="20sp"
        android:popupElevation="20dp"
        android:text="Transaksi Penjualan Produk"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tampilKodeTransaksiPenjualanProduk"
        android:layout_height="35sp"
        android:background="#fffdd0"
        android:layout_width="match_parent"
        android:popupElevation="20dp"
        android:textColor="#000000"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_marginBottom="20sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerIdLunas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:popupElevation="20dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textSize="60sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btnTambahPenjualanProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH TRANSAKSI PENJUALAN PRODUK" />

    <Button
        android:id="@+id/btnTampilPenjualanroduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMPIL TRANSAKSI PENJUALAN PRODUK"
        android:background="#fffdd0"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE TRANSAKSI PENJUALAN PRODUK"
        android:background="#00FF00"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnUpdatePenjualanProduk"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HAPUS TRANSAKSI PENJUALAN PRODUK"
        android:background="#FF6347"
        android:id="@+id/btnDeletePenjualanProduk"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tvJudulKosongPenjualanProduk"
        android:layout_width="312dp"
        android:layout_height="20dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="gone"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvJudulPenjualanProduk"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        android:text="Produk Dipesan"
        android:background="#fffdd0"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnTambahProdukDetail"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="Tambah"
        android:visibility="gone"
        android:layout_marginLeft="150dp" />

    <TextView
        android:id="@+id/tvProdukMasihKosongPenjualanProduk"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        android:text="Wah, keranjang produkmu kosong Daripada dianggurin, mending isi dengan barang-barang impianmu. Yuk, cek sekarang!"
        android:textAlignment="center"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDetailPenjualanProduk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:visibility="gone"
        android:layout_marginBottom="5dp" />

</LinearLayout>