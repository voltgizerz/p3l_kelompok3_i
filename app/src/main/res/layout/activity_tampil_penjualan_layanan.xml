<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFEB3B"
    android:layout_height="match_parent"
    tools:context=".TampilPenjualanLayanan">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTransaksiPenjualanLayanan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJudulPenjualanLayanan" />


    <Button
        android:id="@+id/btnSortingSudahSelesai"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="8dp"
        android:background="#8BC34A"
        android:text="Sudah Selesai"
        app:layout_constraintBottom_toTopOf="@+id/recyclerTransaksiPenjualanLayanan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.176"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvJudulPenjualanLayanan"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnSortingBelumSelesai"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:background="#FF5722"
        android:text="Belum Selesai"
        app:layout_constraintBottom_toTopOf="@+id/recyclerTransaksiPenjualanLayanan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJudulPenjualanLayanan"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewDaftarPenjualanLayanan"
        android:layout_width="174dp"
        android:layout_height="101dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/pet"
        app:layout_constraintBottom_toTopOf="@+id/tvJudulPenjualanLayanan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvJudulPenjualanLayanan"
        android:layout_width="319dp"
        android:layout_height="22dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="40dp"
        android:text="Data Transaksi Penjualan Layanan"
        tools:ignore="HardcodedText"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recyclerTransaksiPenjualanLayanan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDaftarPenjualanLayanan" />

</androidx.constraintlayout.widget.ConstraintLayout>