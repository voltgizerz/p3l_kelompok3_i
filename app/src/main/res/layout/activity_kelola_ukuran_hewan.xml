<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".KelolaUkuranHewan"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

    </LinearLayout>


    <EditText
        android:id="@+id/ukuran_hewan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ukuran Hewan"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btnTambahUkuranHewan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH UKURAN HEWAN"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="129dp" />

    <Button
        android:id="@+id/btnTampilUkuranHewan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMPIL UKURAN HEWAN"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="71dp" />

</LinearLayout>