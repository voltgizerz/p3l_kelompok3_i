<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#FFEB3B"
    tools:context=".KelolaPengadaan"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewKelolaPengadaan"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/kode_transaksi_pengadaan"
            android:hint="Kode Transaksi Pengadaan"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nama_supplier_pengadaan"
            android:hint="Nama Supplier"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnTambahPengadaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH TRANSAKSI PENGADAAN"
        />

    <Button
        android:id="@+id/btnTampilPengadaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMPIL TRANSAKSI PENGADAAN"
        android:background="#fffdd0"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE TRANSAKSI PENGADAAN"
        android:background="#00FF00"
        android:id="@+id/btnUpdatePengadaan"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HAPUS TRANSAKSI PENGADAAN"
        android:background="#FF6347"
        android:id="@+id/btnDeletePengadaan"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tvJudulKosong"
        android:layout_width="312dp"
        android:layout_height="20dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="gone"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvJudulPengadaan"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        android:text="Produk Dipesan"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDetailProduk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:visibility="gone"
        android:layout_marginBottom="5dp" />

</LinearLayout>