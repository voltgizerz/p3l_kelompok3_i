<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#FFEB3B"
    tools:context=".KelolaPengadaan"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewKelolaPengadaan"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_height="35sp"
        android:layout_width="match_parent"
        android:text="Transaksi Pengadaan"
        android:popupElevation="20dp"
        android:textColor="#000000"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_marginBottom="20sp"/>

    <TextView
        android:id="@+id/tampilKodeTransaksi"
        android:layout_height="35sp"
        android:background="#fffdd0"
        android:layout_width="match_parent"
        android:popupElevation="20dp"
        android:textColor="#000000"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_marginBottom="20sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerIdSupplier"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:popupElevation="20dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:popupElevation="20dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textSize="60sp"
            android:visibility="gone"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnTambahPengadaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH TRANSAKSI PENGADAAN" />

    <Button
        android:id="@+id/btnTampilPengadaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMPIL TRANSAKSI PENGADAAN"
        android:background="#fffdd0"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE TRANSAKSI PENGADAAN"
        android:background="#00FF00"
        android:id="@+id/btnUpdatePengadaan"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HAPUS TRANSAKSI PENGADAAN"
        android:background="#FF6347"
        android:id="@+id/btnDeletePengadaan"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tvJudulKosong"
        android:layout_width="312dp"
        android:layout_height="20dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="gone"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvJudulPengadaan"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        android:text="Produk Dipesan"
        android:background="#fffdd0"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvProdukMasihKosong"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        android:text="Wah, keranjang pengadaanmu kosong Daripada dianggurin, mending isi dengan barang-barang impianmu. Yuk, cek sekarang!"
        android:textAlignment="center"
        android:textSize="18sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerDetailProduk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:visibility="gone"
        android:layout_marginBottom="5dp" />

</LinearLayout>