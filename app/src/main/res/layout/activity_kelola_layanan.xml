<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    android:orientation="vertical"
    tools:context=".KelolaLayanan">

    <ImageView
        android:id="@+id/imageViewKELOLALayanan"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/data_nama_layanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Layanan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/data_harga_layanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Harga Layanan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerKelolaLayananJH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:popupElevation="20dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerKelolaLayananUH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:popupElevation="20dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:textSize="60sp" />
    </LinearLayout>



    <Button
        android:id="@+id/btnTambahLayananKelola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH Layanan" />

    <Button
        android:id="@+id/btnTampilLayananKelola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffdd0"
        android:text="TAMPIL Layanan" />

    <Button
        android:id="@+id/btnUpdateLayanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Layanan"
        android:background="#00FF00"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnDeleteLayanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus Layanan"
        android:background="#FF6347"
        android:visibility="gone" />
</LinearLayout>