<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEB3B"
    tools:context=".KelolaHewan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/data_nama_hewan"
            android:hint="Nama Hewan"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerIdJenisHewan"
            android:hint="Id Jenis Hewan"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/data_id_ukuran_hewan"
            android:hint="Id Ukuran Hewan"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/data_tanggal_lahir_hewan"
            android:hint="Tanggal Lahir"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/data_id_customer"
            android:hint="Id Customer"/>
    </LinearLayout>





    <Button
        android:id="@+id/btnTambahHewanKelola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH HEWAN" />

    <Button
        android:id="@+id/btnTampilHewanKelola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMPIL HEWAN"
        android:background="#fffdd0"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Hewan"
        android:id="@+id/btnUpdateHewan"
        android:visibility="gone"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus Hewan"
        android:id="@+id/btnDeleteHewan"
        android:visibility="gone"/>
</LinearLayout>